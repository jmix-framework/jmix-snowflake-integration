<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://timeTypesMainEntityBrowse.caption"
        focusComponent="timeTypesMainEntitiesTable">
    <data readOnly="true">
        <collection id="timeTypesMainEntitiesDc"
                    class="com.company.snowflake.entity.TimeTypesMainEntity">
            <fetchPlan extends="_base"/>
            <loader id="timeTypesMainEntitiesDl">
                <query>
                    <![CDATA[select e from TimeTypesMainEntity e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="timeTypesMainEntitiesTable" spacing="true">
        <filter id="filter"
                dataLoader="timeTypesMainEntitiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="timeTypesMainEntitiesTable"
                    width="100%"
                    dataContainer="timeTypesMainEntitiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="timeAsTime"/>
                <column id="timeAsLocalTime"/>
                <column id="timeAsOffsetTime"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="timeTypesMainEntitiesTable.create"/>
                <button id="editBtn" action="timeTypesMainEntitiesTable.edit"/>
                <button id="removeBtn" action="timeTypesMainEntitiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
